<h1>Edit <%= @species.name %></h1>

<p><%= @species.id%></p>
<% if @species.errors.any? %>
  <ul>

  <% @species.errors.full_message.each do |message| %>
    <li> <%= message %> </li>
  <% end %>

  </ul>
<% end %>

<form action="/species/update" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="genus">Genus:</label>
  <input id="genus" name="species[genus]" type="text" value="<%= @species.genus %>">
  <input id="id" name="id" type ="hidden" value ="<%= @species.id %>">
  <button>Edit</button>
</form>
